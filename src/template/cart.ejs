<link rel="stylesheet" href="../style/shoppingCartPage.css">
<div class="container">
    
    <h1 class="cart-heading">Cart</h1>
    <div class="cart">
      <div class="cart-header">
        <div class="header-product">Product</div>
        <div class="header-price">Price</div>
        <div class="header-quantity">Quantity</div>
        <div class="header-subtotal">Subtotal</div>
      </div>

      <div class="cart-items">
        <% if (cart && cart.length > 0) { %>
            <% cart.forEach((item, index) => { %>
                <tr id="item-<%= index %>">
                    <td>
                        <img src="<%= item.image %>" alt="<%= item.name %>" class="product-image">
                        <span><%= item.title %></span>
                    </td>
                    <td>$<%= item.price.toFixed(2) %></td>
                    <td>
                        <button class="quantity-btn decrease" data-index="<%= index %>">-</button>
                        <span class="quantity"></span>
                        <button class="quantity-btn increase" data-index="<%= index %>">+</button>
                    </td>
                    <!-- <td>$<%= (item.price * item.quantity).toFixed(2) %></td> -->
                    <td><button class="remove-item-btn" data-index="<%= index %>">Remove</button></td>
                </tr>
            <% }); %>
        <% } else { %>
            <tr>
                <td colspan="5">Your cart is empty.</td>
            </tr>
        <% } %>
      </div>
    </div>

    
    <div class="cart-totals">
        <h2>Cart Totals</h2>
        <div class="totals">
          <p>Subtotal: <span class="totals-subtotal">$0.00</span></p>
          <p>Total: <span class="totals-total">$0.00</span></p>
          <div class="coupon-section">
            <label for="coupon">Have a coupon?</label>
            <input type="text" id="coupon" placeholder="Enter coupon code">
            <button class="apply-coupon">Apply</button>
          </div>
          <button class="checkout-button">Proceed to Checkout</button>
        </div>
      </div>
    </div>
      </div>
    </div>
  </div>